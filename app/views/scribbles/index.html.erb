<p id="notice"><%= notice %></p>

<!-- Make new scribble btn -->
<%= link_to 'New Tweet', new_scribble_path, class: 'btn btn-md btn-success' %>



<div class="tab">
  <button class="tablinks" onclick="openCity(event, 'London')">London</button>
  <button class="tablinks" onclick="openCity(event, 'Paris')">Paris</button>
  <button class="tablinks" onclick="openCity(event, 'Tokyo')">Tokyo</button>
</div>

<div id="London" class="tabcontent">
  <h3>London</h3>
  <p>London is the capital city of England.</p>
  <!-- See all the scribbles in a table -->
  <table class="table table-striped table-hover">
  <!-- Head -->
    <thead>
      <tr>
        <th>Message</th>
        <th>Username</th>
        <th colspan="3"></th>
      </tr>
    </thead>
  
  <!-- Body -->
  <tbody>
    <!-- iterate through the scribbles, each one in a new row -->
    <% @scribbles.each do |scribble| %>
      <tr>
        <td><%= scribble.message %></td>
        <td><%= scribble.user.username %></td>
        <td><%= link_to 'Show', scribble %></td>
        <td><%= link_to 'Edit', edit_scribble_path(scribble) %></td>
        <td><%= link_to 'Destroy', scribble, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>

  </table>
  </div>

<div id="Paris" class="tabcontent">
  <h3>Paris</h3>
  <p>Paris is the capital of France.</p> 
  
</div>

<div id="Tokyo" class="tabcontent">
  <h3>Tokyo</h3>
  <p>Tokyo is the capital of Japan.</p>
</div>


